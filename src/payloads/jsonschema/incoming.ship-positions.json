{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "definitions": {
    "ship": {
      "additionalProperties": false,
      "required": [
        "orientation",
        "origin"
      ],
      "type": "object",
      "properties": {
        "orientation": {
          "enum": [
            "horizontal",
            "vertical"
          ]
        },
        "origin": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "examples": [
            [
              0,
              2
            ]
          ]
        }
      }
    }
  },
  "examples": [
    {
      "Carrier": {
        "origin": [
          0,
          2
        ],
        "orientation": "horizontal"
      },
      "Battleship": {
        "origin": [
          1,
          0
        ],
        "orientation": "horizontal"
      },
      "Submarine": {
        "origin": [
          0,
          4
        ],
        "orientation": "horizontal"
      },
      "Destroyer": {
        "origin": [
          0,
          3
        ],
        "orientation": "horizontal"
      }
    }
  ],
  "required": [
    "Carrier",
    "Battleship",
    "Submarine",
    "Destroyer"
  ],
  "properties": {
    "Carrier": {
      "$ref": "#/definitions/ship"
    },
    "Battleship": {
      "$ref": "#/definitions/ship"
    },
    "Submarine": {
      "$ref": "#/definitions/ship"
    },
    "Destroyer": {
      "$ref": "#/definitions/ship"
    }
  },
  "additionalProperties": false
}
